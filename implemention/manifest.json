{
  "manifest_version": 3,
  "name": "Gmail Gemini Agent",
  "version": "1.0",
  "description": "An AI agent to assist with emails in Gmail.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["https://mail.google.com/*"]
    }
  ],
   "action": {
    "default_popup": "popup.html"
  }
}